{% extends 'base.html.twig' %}

{% block title %}Dijoma.be - Activités{% endblock %}

{% block body %}
    <div class="relative bg-white py-16 sm:py-24 lg:pb-32">
        <div class="relative">
            <div class="mx-auto max-w-md px-6 text-center sm:max-w-3xl lg:max-w-7xl lg:px-8">
                <h2 class="text-lg font-semibold text-red-700">Activités</h2>
                <p class="mt-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Voici nos activités</p>
                <p class="mx-auto mt-5 max-w-prose text-xl text-gray-500">Cliquez sur une activité afin de voir des photos de nos réalisations.</p>
            </div>
            <div class="mx-auto mt-12 grid max-w-md gap-8 px-6 sm:max-w-lg lg:max-w-7xl lg:grid-cols-3 lg:px-8">
                {% for activite in activites %}
                    <div class="flex flex-col overflow-hidden rounded-lg shadow-lg bg-apple">
                        <a href="{{ path('ActPhoto_show', {'id': activite.id}) }}" class="focus:outline-none">
                            <div class="flex-shrink-0">
                                <img class="h-48 w-full object-cover" src="{{asset('images/upload/activite/'~activite.imageName)}}" alt="">
                            </div>
                            <div class="flex flex-col overflow-hidden rounded-lg">
                                <div class="flex flex-1 flex-col justify-between p-6">
                                    <div class="flex-1">
                                        <p class="text-sm font-medium text-red-700 italic">
                                            {{ activite.title }}
                                        </p>
                                            <p class="text-xl font-semibold text-gray-100">{{ activite.title }}</p>
                                            <p class="mt-3 text-base text-gray-100">{{ activite.description }}</p>
                                    </div>
                                </div>
                            </div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        </div>

    </div>
</div>

{% endblock %}
