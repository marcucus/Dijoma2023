{% extends 'base.html.twig' %}

{% block title %}Dijoma.be - Activit√©s{% endblock %}

{% block body %}

<main class="bg-white">
    <div class="mx-auto max-w-7xl sm:px-6 lg:px-8">
        <div class="inline-flex gap-6 sm:grid-cols-2 lg:grid-cols-3 max-w-4xl max-h-4xl">
            {% for activite in activites %}
                <a href="{{ path('ActPhoto', {'id': activite.id}) }}" class="focus:outline-none">
                    <div class="w-auto inline-flex flex-col rounded overflow-hidden shadow-lg">
                        <img class="w-full" src="{{ asset('images/upload/activite/'~activite.imageName) }}">
                        <div class="px-6 py-4">
                            <div class="font-bold text-xl mb-2">{{ activite.title }}</div>
                            <p class="text-gray-700 text-base">
                            </p>
                            <a href="{{ path('moreInfo', {'id': activite.id}) }}">
                                Plus d'info</a>
                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
</main>

<div class="bg-white mx-auto max-w-7xl sm:px-6 lg:px-8">
    {% if photos is defined %}
        <ul role="list" class="grid grid-cols-2 gap-x-4 gap-y-8 sm:grid-cols-3 sm:gap-x-6 lg:grid-cols-4 xl:gap-x-8">
            {% for photo in photos %}
                {% if photo.imageName is not null %}
                    <li class="relative">
                        <div class="group aspect-w-10 aspect-h-7 block w-full overflow-hidden rounded-lg bg-gray-100 focus-within:ring-2 focus-within:ring-indigo-500 focus-within:ring-offset-2 focus-within:ring-offset-gray-100">
                            <img src="{{asset('images/upload/activite/images/'~photo.imageName)}}" alt="" class="pointer-events-none object-cover group-hover:opacity-75">
                        </div>
                    </li>
                {% else %}
                    <div>Pas de photos</div>
                {% endif %}
            {% endfor %}
        </ul>
    {% endif %}
    </div>
</div>
{% endblock %}
