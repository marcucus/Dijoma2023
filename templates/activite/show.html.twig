{% extends 'base.html.twig' %}

{% block title %}Photos{% endblock %}
{% block body %}
    <div class="relative bg-white py-16 sm:py-24 lg:pb-32">
        <main class="lg:relative lg:mr-20">
            <div class="mx-auto max-w-md px-6 text-center sm:max-w-3xl lg:max-w-7xl lg:px-8">
                <h2 class="text-lg font-semibold text-red-700">{% for act in activite %}
                    {{ act.title }}
                {% endfor %}</h2>
                <p class="mt-2 text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Voici nos réalisations en {% for act in activite %}
                        {{ act.title }}
                    {% endfor %}</p>
                <p class="mx-auto mt-5 max-w-prose text-xl text-gray-500">Cliquez sur une activité afin de voir des photos de nos réalisations.</p>
            </div>

            <div class="bg-white mx-auto max-w-7xl pt-20 sm:px-6 lg:px-8">

                {% if photos is defined %}
                    <ul role="list" class="grid grid-cols-2 gap-x-4 gap-y-8 sm:grid-cols-2 sm:gap-x-6 lg:grid-cols-4 xl:gap-x-8">
                        {% for photo in photos %}
                            {% if photo.imageName is not null %}
                                <li class="relative">
                                    <div class="group aspect-w-10 aspect-h-7 block w-full overflow-hidden rounded-lg bg-gray-100 focus-within:ring-2 focus-within:ring-indigo-500 focus-within:ring-offset-2 focus-within:ring-offset-gray-100">
                                        <img src="{{asset('images/upload/activite/images/'~photo.imageName)}}" alt="" class="pointer-events-none object-cover group-hover:opacity-75">
                                    </div>
                                </li>
                            {% else %}
                                <div>Pas de photos</div>
                            {% endif %}
                        {% endfor %}
                    </ul>
                {% endif %}
            </div>
        </main>
    </div>
</div>
{% endblock %}