{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
        <div class="mx-auto max-w-7xl py-6 sm:px-6 lg:px-8">
            <div class="flex min-h-full flex-col justify-center py-12 sm:px-6 lg:px-8">
                <div class="sm:mx-auto sm:w-full sm:max-w-md">
                    <div class="text-zinc-800 text-3xl font-bold text-center" style="font-family: Futura,Trebuchet MS,Arial,sans-serif; ">DIJOMA</div>
                    <h2 class="mt-6 text-center text-3xl font-bold tracking-tight text-gray-900">Administration</h2>
                    <p class="mt-2 text-center text-sm text-gray-600">
                        <span class="font-medium text-red-700 hover:text-red-800">Accessible seulement pour l'administrateur</span>
                    </p>
                </div>

                <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
                    <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
                        <form class="space-y-6" method="POST">
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            <div>
                                <label for="email" class="block text-sm font-medium text-gray-700">Adresse e-mail</label>
                                <div class="mt-1">
                                    <input type="email" name="email" id="inputEmail" autocomplete="email" autofocus value="{{ last_username }}" required class="block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-red-600 focus:outline-none focus:ring-red-600 sm:text-sm">
                                </div>
                            </div>

                            <div>
                                <label for="password" class="block text-sm font-medium text-gray-700">Mot de passe</label>
                                <div class="mt-1">
                                    <input type="password" name="password" id="inputPassword" autocomplete="current-password" required class="block w-full appearance-none rounded-md border border-gray-300 px-3 py-2 placeholder-gray-400 shadow-sm focus:border-red-600 focus:outline-none focus:ring-red-600 sm:text-sm">
                                </div>
                            </div>

                            <div class="flex items-center justify-between">

                                <div class="text-sm">
                                    <a href="{{ path('app_forgot_password_request') }}" class="font-medium text-red-700 hover:text-red-600">Mot de passe oubli√© ?</a>
                                </div>
                            </div>
                            <input type="hidden" name="_csrf_token"
                                   value="{{ csrf_token('authenticate') }}"
                            >
                            <div>
                                <button type="submit" class="flex w-full justify-center rounded-md border border-transparent bg-red-700 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-red-800 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2">Se connecter</button>
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
</div>

{% endblock %}
